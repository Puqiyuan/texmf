\NeedsTeXFormat{LaTeX2e}
\ProvidesClass{wx672b}

\DeclareOption{12pt}{\PassOptionsToPackage{\CurrentOption}{beamer}}
\DeclareOption{ignorenonframetext}{\PassOptionsToPackage{\CurrentOption}{beamer}}
\DeclareOption{compress}{\PassOptionsToPackage{\CurrentOption}{beamer}}

\DeclareOption*{\PassOptionsToClass{\CurrentOption}{beamer}}

\ExecuteOptions{12pt,ignorenonframetext,compress}

\ProcessOptions\relax

\RequirePackage{tikz-wx672}

\RequirePackage{wx672common}

\hypersetup{%
  bookmarksnumbered,pdfpagelabels=true,plainpages=false,
  pdfborderstyle={/S/U/W .5},% border style will be underline of width .5pt 
  colorlinks=true,
  linkcolor=Green,citecolor=black,urlcolor=blue
}

\usetheme{default}
\setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}
\usenavigationsymbolstemplate{}
\setbeamertemplate{blocks}[rounded][shadow=false]
\setbeamercolor{structure}{fg=Green}
\setbeamercolor{block title}{fg=Green,bg=Gray!6}
\setbeamercolor{block body}{bg=Gray!4}
\setbeamercolor{alerted text}{fg=blue}
\setbeamercolor{section in toc}{fg=Green,bg=Gray!6}
\setbeamercovered{transparent}
